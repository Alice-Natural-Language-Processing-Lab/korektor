TARGETS=korektor.html online.html install.html user.html model_creation.html
all: $(TARGETS)

../../documentation/web%html:
	$(MAKE) -C $(@D) $(@F)

korektor.html: ../../documentation/web.html
	sed '1,/<body>/d; /<div class="header"/,/<\/div/d; /^<!-- html code generated by txt2tags/,$$ d' $< >$@

online.html install.html user.html model_creation.html:%: ../../documentation/web_%
	sed '1,/<body>/d; /^<!-- html code generated by txt2tags/,$$ d' $< >$@

install: $(TARGETS)
	scp $(TARGETS) ufal:public_html/korektor/

.PHONY: clean
clean:
	rm -f $(TARGETS)
